<h1>Editer un tag</h1>


<div class="form-group">
  
  <%= form_for @tag do |f| %>
  <p>
    Titre : 
    <%= f.text_field :name, class:"form-control" %>
  </p>
  <p>
    Contenu : 
    <%= f.text_area :description, class:"form-control", rows:"3" %>
  </p>
  <p>
    <%= f.submit "Enregistrer !", class:"btn btn-default" %> <br/>
  </p>
  <% end %>
  
</div>
