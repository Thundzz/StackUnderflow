
<% if (@questions.size==1) then ch="Question correspondante" else ch="Questions correspondantes" end%> 
<h1><%= @tag.name%> :</h1><h3> <%= @questions.size%> <%=ch%></h3>
<hr/>

	</br>
	
	
	

	<!--************************************nouveau code **************************-->
	<div class="panel-group" id="accordion">
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h4 class="panel-title">
		<a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
		  Description
		</a>
	      </h4>
	    </div>
	    <div id="collapseOne" class="panel-collapse collapse in">
	      <div class="panel-body">
		<%= @tag.description().html_safe %>
	      </div>
	    </div>
	  </div>
	  <div class="panel panel-default">
	    <div class="panel-heading">
	      <h4 class="panel-title">
		<a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
		  <%=ch%>
		</a>
	      </h4>
	    </div>
	    <div id="collapseTwo" class="panel-collapse collapse">
	      <div class="panel-body">
		<% @questions.each do |question| %>
		<p><%= link_to question.title, question_path(question) %> </p>
		<% end %>
	      </div>
	    </div>
	  </div>
	  <hr/>
	  <div>
	  <% if current_user.is_admin? %>
	  <%= link_to "Supprimer ce tag", tag_path(@tag), :confirm => "Êtes vous sûr(e) de vouloir supprimer ce tag?", :method => :delete, class: "btn btn-danger"%>
	  <% end %>
	  </div>
	</div>
	

</div>

