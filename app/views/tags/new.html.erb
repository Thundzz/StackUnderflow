<div class="form-group">
  
  <%= form_for @tag do |f| %>
  <p>
    Name : 
    <%= f.text_field :name, class:"form-control" %>
  </p>
  
  <p>
    Description : 
    <%= f.text_area :description, class:"form-control", rows:"3" %>
