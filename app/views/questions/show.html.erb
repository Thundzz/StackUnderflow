

<div data-alerts="alerts" data-titles="{'warning': '<em>Warning!</em>'}" data-ids="myid" data-fade="1200"></div>
<h2> <%=  link_to @question.title, question_path(@question) %>  </h2>

<div class="question"
style="padding:0px;">


<div id="<%=@question.id%>y" class="alert alert-warning
 alert-dismissable" style="DISPLAY: none" >
 <button type="button" class="close" data-dismiss="alert"
 aria-hidden="true">&times;</button> Vous ne pouvez pas
 voter pour votre propre question!
</div>
<table style="text-align: left; width: 100%;
border-radius: 5px;
border-collapse: separate;">
<tbody>

 <tr>
  <td style="vertical-align: top; font-size:32px;
  font-weight: bold; color: #ffffff;
  font-family: Verdana; background-color: #525756;
  border-radius: 15px 0px 15px 0px;"
  width="55">
  <center class= "compteur">
    <%= @vote_count_show %>
  </center>
</td>
<td style="vertical-align: top; padding-left:8px;">
  <%= render :partial => "shared/user_mini", :locals => {:user => @question.user} %>
  <%= @question.content.html_safe %>
</td>
</tr>

<tr>
  <td>
    <%= link_to(
      content_tag(:span, "",
        { :class => "glyphicon glyphicon-thumbs-up" }),
      vote_for_question_path(@question), {
        :remote => true,
        :class =>"btn btn-default btn-xs",
        :style => "margin:0px"}) %>
    <%= link_to(
      content_tag(:span, "",
        { :class => "glyphicon glyphicon-thumbs-down" }),
      vote_against_question_path(@question), {
        :remote => true,
        :class =>"btn btn-default btn-xs",
        :style => "margin:0px"}) %>
      </td>

      <td style="text-align: left; padding-left: 8px">
        <% if (current_user == @question.user) %>
        | <%= link_to "Editer cette reponse",
        edit_question_path(@question)
        %> |
        <%= link_to "Supprimer question", question_path(@question),
        :confirm => "Êtes vous sûr de vouloir supprimer cette réponse?",
        :method => :delete %>
        <% end %>
      </td>
    </tr>

  </tbody>
</table>
</div>






<% unless @question.tags.blank? %>
<p>
  <ul class="tags">
    <% @question.tags.each do |tag|%>
    <li><a href="<%= tag_path(tag)%>"><%= tag.name%></a></li>

    <%end%>

</ul>
</p>
<%end%>










<!-- ******************************partie Reponses *************************** -->
<%= link_to "Nouvelle réponse", new_answer_path(:question_id => @question.id), :class=>"btn btn-info" %>
<hr />
<% @answers.each do |answer| %>
<div class="answer"
style="padding:0px;">

<div id="<%=answer.id%>x" class="alert alert-warning
 alert-dismissable" style="DISPLAY: none" >
 <button type="button" class="close" data-dismiss="alert"
 aria-hidden="true">&times;</button> Vous ne pouvez pas
 voter pour votre propre réponse!
</div>
<table style="text-align: left; width: 100%;
border-radius: 5px;
border-collapse: separate;">
<tbody>

 <tr>
  <td style="vertical-align: top; font-size:32px;
  font-weight: bold; color: #ffffff;
  font-family: Verdana; background-color: #525756;
  border-radius: 15px 0px 15px 0px;"
  width="55">
  <center id= <%=answer.id%> >
    <%= answer.votes_for-answer.votes_against %>
  </center>
</td>
<td style="vertical-align: top; padding-left:8px;">
  <%= render :partial => "shared/user_mini", :locals => {:user => answer.user} %>
  <%= answer.content.html_safe %>
</td>
</tr>

<tr>
  <td>
    <%= link_to(
      content_tag(:span, "",
        { :class => "glyphicon glyphicon-thumbs-up" }),
      vote_for_answer_path(answer), {
        :remote => true,
        :class =>"btn btn-default btn-xs",
        :style => "margin:0px"}) %>
    <%= link_to(
      content_tag(:span, "",
        { :class => "glyphicon glyphicon-thumbs-down" }),
      vote_against_answer_path(answer), {
        :remote => true,
        :class =>"btn btn-default btn-xs",
        :style => "margin:0px"}) %>
      </td>

      <td style="text-align: left; padding-left: 8px">
        <div> Par &nbsp;<%= image_tag avatar_url(answer.user,20) %> &nbsp; <h4 style="display:inline"><%= link_to answer.user.login, answer.user %>
        <% if (current_user == answer.user) %>
       
        |&nbsp;<%= link_to "Editer cette reponse",
        edit_answer_path(answer)
        %> |
        <%= link_to "Supprimer réponse", answer_path(answer),
        :confirm => "Êtes vous sûr de vouloir supprimer cette réponse?",
        :method => :delete %>
        <% end %>
       </div>
      </td>
    </tr>

  </tbody>
</table>




</div>
<% end %>
