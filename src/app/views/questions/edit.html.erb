<h1>Ajouter une nouvelle question</h1>


<div class="form-group">

<%= form_for @question do |f| %>
	<p>
		<%= f.label :title, "Titre :" %><br/>
		<%= f.text_field :title, class:"form-control" %>
	</p>
	
	<p>
		 
                <%= f.label :content, "Content :" %><br/>
		<%= f.text_area :content, class:"form-control", rows:"5" %>
        </p>

        <p>
		<%= f.label :tag_tokens, "Tags :" %><br/>
		<%= f.text_field :tag_tokens, class:"form-control", "data-pre" => @question.tags.map(&:attributes).to_json %> (5 tags au max)
	</p>
	
        <p>
		<%= f.submit "Envoyer !", class:"btn btn-default" %> <br/>
	</p>
<% end %>

</div>
